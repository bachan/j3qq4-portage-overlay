#!/bin/sh

die() {
	echo "#####"
	echo $1
	echo "#####"
	exit 1
}

if [ $1 = "install" ]; then
	config_file="${MY_INSTALLDIR`}/src/config.php"
	sed -e "s:/usr/local/apache/vegadns:${VHOST_ROOT}/${PN}:" \
		-e "s:127.0.0.1/vegadns-0.9.9.1:${VHOST_HOSTNAME}/${PN}:" \
		-e "s:/usr/local/bin:/usr/bin:" \
		-i ${config_file} || die "sed failed"
fi

if [ $1 = "clean" ]; then
	echo $1
fi
