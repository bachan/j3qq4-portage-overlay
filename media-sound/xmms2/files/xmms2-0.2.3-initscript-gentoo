opts="${opts}"

depend() {
	need net
}

start() {
	ebegin "Starting xmms2"
	start-stop-daemon --start --exec /usr/bin/xmms2-launcher -q &>/dev/null
	eend
}

stop() {
	ebegin "Stopping xmms2"
	start-stop-daemon --start --exec /usr/bin/xmms2 -- quit &1>/dev/null
	eend $?
}
